@model IEnumerable<Assignment2.Models.Store>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <h2>Stores</h2>
    <div id="map" style="height:500px;"></div>
    <hr />
    @if (User.IsInRole("Admin"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th style="display:none;">
                    @Html.DisplayNameFor(model => model.Latitude)
                </th>
                <th style="display:none;">
                    @Html.DisplayNameFor(model => model.Longitude)
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr class="coordinates">
                    <td class="description">
                        <a href="@Url.Action("Details", new { id = item.Id })">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td class="latitude" style="display:none;">
                        @item.Latitude.ToString("###.########")
                    </td>
                    <td class="longitude" style="display:none;">
                        @item.Longitude.ToString("###.########")
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @section Scripts {
        @Scripts.Render("~/bundles/mapbox")
        @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
        @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
        <script>
            $(document).ready(function () {
                $('.table').DataTable();
            });
        </script>
    }
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css"
          rel="stylesheet" />
